{

	"extends": ["eslint:recommended", "plugin:react-hooks/recommended"],
	"parser": "@babel/eslint-parser",
	"parserOptions": {
		"ecmaVersion": 2021,
		"requireConfigFile": false
	},

	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"semi": ["error", "always"],
		"no-undef": "off",
		"no-unused-vars": "off",
		"max-len": ["error", {
			"code": 80,
			"comments": 100,
			"tabWidth": 3
		}]
	},

	"root": true,
	"ignorePatterns": ["dist/**", "src/vendor/**"]

}